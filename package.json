{
    "name": "vscode-dm-binder",
    "displayName": "DMBinder",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:.dmbinder/campaign.json",
        "onCommand:dmbinder.campaign.init",
        "onCommand:dmbinder.component.build",
        "onView:dmbinder"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "dmbinder.campaign.init",
                "title": "Initialize Campaign in Current Folder",
                "category": "DM Binder"
            },
            {
                "command": "dmbinder.component.build",
                "title": "Build component",
                "category": "DM Binder"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "DMBinder",
            "properties": {
                "dmbinder.homebrewPreviewEnabled": {
                    "type": "boolean",
                    "description": "Flag to render Markdown files using PHB styles."
                },
                "dmbinder.treeViewStyle": {
                    "type": "string",
                    "description": "Tree view layout for DM Binder resources",
                    "enum": [
                        "composite",
                        "split"
                    ],
                    "enumDescriptions": [
                        "Combined view listing all resources by type within each campaign.",
                        "Split panel view listing resources grouped by resource type."
                    ],
                    "default": "split"
                }
            }
        },
        "jsonValidation": [
            {
                "fileMatch": "/.dmbinder/campaign.json",
                "url": "./campaign.schema.json"
            }
        ],
        "markdown.markdownItPlugins": true,
        "markdown.previewStyles": [
            "./phb.standalone.css",
            "./jsnee-homebrew.css"
        ],
        "menus": {
            "view/item/context": [
                {
                    "command": "dmbinder.component.build",
                    "when": "view == dmbinder.components && viewItem == ComponentItem"
                }
            ]
        },
        "views": {
            "dmbinder": [
                {
                    "id": "dmbinder",
                    "name": "DM Binder",
                    "when": "treeViewStyle.composite"
                },
                {
                    "id": "dmbinder.sources",
                    "name": "Sources"
                },
                {
                    "id": "dmbinder.templates",
                    "name": "Templates"
                },
                {
                    "id": "dmbinder.components",
                    "name": "Components"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "dmbinder",
                    "title": "DM Binder",
                    "icon": "./img/icon.svg"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/fs-extra": "^5.0.4",
        "@types/markdown-it": "0.0.7",
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "tslint": "^5.8.0",
        "typescript": "^3.1.4",
        "vscode": "^1.1.25"
    },
    "dependencies": {
        "fs-extra": "^7.0.1"
    }
}
